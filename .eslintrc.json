{
  "rules": {
    
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "object-curly-spacing":["warn", "always"],
    "no-console": "off",
    "no-unused-vars": "off",
    "indent": ["error", 2,
      {
        "SwitchCase": 1
      }
    ],
    "semi": ["error", "never"]
  },
  "plugins": [],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "module": true,
      "spread": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "browser": true,
    "commonjs": true
  },
  "globals": {
    "__API_URL__": false,
    "__TITLE__": false,
    "__DEBUG__": false
  },
  "extends": [
    "eslint:recommended"
  ]
}