{
  "rules": {
    "quotes": [
      "error", "single", 
      { "allowTemplateLiterals": true }
    ],
    "space-in-parens": ["warn",  "never"],
    "new-cap": ["error",  
      { "capIsNewExceptions": [ "Record" ] }
    ],    
    "camelcase": ["warn"],
    "comma-dangle": ["error", "always-multiline"], 
    "no-console": "off",
    "no-unused-vars": "off",    
    "indent": [ "error", 2, 
      { "SwitchCase": 1 } 
    ],
    "curly": "off",
    "nonblock-statement-body-position":"off",

    "semi": [
      "error",
      "never"
    ]
  },
  "plugins": [
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "parserOptions": { "ecmaVersion": 6 } 
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "browser": true,
    "commonjs": true
  },
  "globals": {
    "__API_URL__": false,
    "__TITLE__": false,
    "__DEBUG__": false,
    "err": true,
    "req": true,
    "res": true,
    "next": true
  },
  "extends": [
    "eslint:recommended"
  ]
}